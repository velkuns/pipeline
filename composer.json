{
  "name": "velkuns/pipeline",
  "description": "Pipeline object for functional programming",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Velkuns\\Pipeline\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Velkuns\\Pipeline\\Tests\\Unit\\": "./tests/unit",
      "Velkuns\\Pipeline\\Tests\\Integration\\": "./tests/integration"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.2.*||8.3.*"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.40.0",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.4.2",
    "phpstan/phpstan": "^1.10.46",
    "phpstan/phpstan-phpunit": "^1.3.15"
  }
}
